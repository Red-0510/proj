<%- include('partials/header') %>
<div class="jumbotron text-center">
  <div class="col-md-6 mx-auto">
    <% if (locals.message) { %>
      <div class="alert alert-<%= message.colour %>  alert-dismissible fade show" role="alert">
        <strong style="font-size:30px"><%= message.body %></strong>
        <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% } %>
  </div>
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <p class="secret-text">Jack Bauer is my hero.</p>
    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
